<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hogo.rahul.machinetaskstringreverse.MainActivity">

    <EditText
        android:id="@+id/et_string"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please Provide your String "
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="36dp" />

    <TextView
        android:id="@+id/tvReverseString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Your Reverse String"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/et_string"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/tv_reverse_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:padding="2dp"
        android:text="sdbkd fvbdvdjvdjv"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/tvReverseString"
        tools:layout_editor_absoluteX="0" />

</android.support.constraint.ConstraintLayout>
